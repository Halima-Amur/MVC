@model List<ToDo>

<div>
    <a asp-controller="ToDo" asp-action="create" class="btn btn-primary"> Create ToDo</a>
</div>

@if (Model.Count() > 0)
{
        <table class="table table-hover table-striped">
            <thead>
                <th>
                    <td>
                        id
                    </td>
                    <td>Name</td>
                    <td>date</td>
            <td> Description </td>
                    <td>Is Finished</td>

                </th>
            </thead>

            <tbody>
                @foreach (var item in Model)
{
                        <tr>
                            <td> @item.Id</td>
                            <td> @item.name</td>
                            <td> @item.CreatedDate.Month</td>
                            <td> @item.isFinished</td>
                            <td>
                                <a asp-controller="ToDo" asp-action="Update" class="btn btn-info"> Update </a>
                            </td>
                            <td>
                                <a asp-controller="ToDo" asp-action="Delete" class="btn btn-danger"> Delete </a>
                            </td>

                        </tr>
}
            </tbody>

        </table>
}
else
{
        <div class="mt-4 bg-light">
            <h3>no Todos are avaliable</h3>

        </div>
}
